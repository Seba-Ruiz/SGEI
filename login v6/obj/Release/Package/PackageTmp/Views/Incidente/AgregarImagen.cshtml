@model Model.imagen

@{
    ViewBag.Title = "AgregarImagen";
    Model.incidente_id = ViewBag.id_incidente;
}

<ol class="breadcrumb">
    <li><a href="~/Inicio/Index">Inicio</a></li>
    <li class="active">@("Agregar Imagen al Incidente") </li>
</ol>


@using (Html.BeginForm("FileUpload", "Incidente", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.incidente_id)

    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card-box">
                <h4 class="m-t-0 m-b-20 header-title"><b>INCIDENTE</b></h4>
                <div class="row">
                    <div class="col-md-12">
                        <h5><b>Agregar una Imagen</b></h5>
                        <p class="text-muted m-b-30 font-13">
                            Agregue una imagen al incidente. Trate de que la foto sea lo mas explicita del incidente.
                        </p>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            
                            <div class="col-md-10">
                                <input type="file" id="file" name="file" class="form-control" />
                            </div>
                            
                        </div>
                        <div></div>
                        <div class="text-center">
                            <div class="col-md-offset-2 col-md-10">
                                <input onclick="" type="submit" value="Subir" class="btn-custom btn-primary" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @if (ViewBag.mensajito)
                        {
                            <div id="alerta" class="alert alert-success" role="alert">
                                <strong>@ViewBag.mensajeExito</strong>@ViewBag.mensajeExito1
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{

    <div class="text-center">
        <input type="submit" value="No agregar foto del Incidente" class="btn-custom btn-inverse" />
    </div>


}


<script>
    function coso() {
        document.getElementById(alerta).hidden = false;
    }

</script>
