@model Model.incidente


@{
    ViewBag.Title = "Incidente";
    Model.ubicacion_impresora_id = ViewBag.ubicacion_impresora_id;
}


<ol class="breadcrumb">
    <li><a href="~/Inicio/Index">Inicio</a></li>
    <li class="active">@("Cargar Incidente") </li>
</ol>

@using (Html.BeginForm("Guardar", "Incidente", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ubicacion_impresora_id)


    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="panel panel-purple panel-border">
                <div class="panel-heading">
                    <h4 class="panel-title">CARGA DE INCIDENTE</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            @*<h5><b>INSUMOS POR FECHA</b></h5>*@
                            <p class="text-muted m-b-30 font-13">
                                Rellene los campos a continuación para detallar el incidente ocurrido y su acción de reparación.
                            </p>
                            <div class="form-group">
                                @Html.Label("Descripcion del Incidente")
                                @Html.TextBoxFor(x => x.incidente1, new { @class = "form-control", @style = "width:500px;", @required="required" })
                                @Html.ValidationMessageFor(x => x.incidente1, null, new { @class = "label label-danger" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Fecha de Incidente")
                                @Html.TextBoxFor(x => x.fecha_incidente, new { @class = "form-control", type = "date", @style = "width:200px;" })
                                @Html.ValidationMessageFor(x => x.fecha_incidente, null, new { @class = "label label-danger" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Accion Realizada")
                                @Html.TextBoxFor(x => x.accion, new { @class = "form-control", @style = "width:500px;", @required = "required" })
                                @Html.ValidationMessageFor(x => x.accion, null, new { @class = "label label-danger" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Fecha de Accion Realizada")
                                @Html.TextBoxFor(x => x.fecha_accion, new { @class = "form-control", type = "date", @style = "width:200px;" })
                                @Html.ValidationMessageFor(x => x.fecha_accion, null, new { @class = "label label-danger" })
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="mostrarmodal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>Atención</h3>
                </div>
                <div class="modal-body">
                    <h4>Desea agregar el incidente?</h4>
                    Al aceptar se agregara el incidente a la impresora. Luego podra consultar el incidente dentro del menu consultas!
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn-custom btn-default">Aceptar</button>
                    @*<a href="#" data-dismiss="modal" class="btn btn-default">Aceptar</a>*@
                </div>
            </div>
        </div>
    </div>
}

<div class="text-center">
    <button class="btn btn-primary btn-custom waves-effect waves-light" data-toggle="modal" data-target="#mostrarmodal">Agregar</button>
</div>



