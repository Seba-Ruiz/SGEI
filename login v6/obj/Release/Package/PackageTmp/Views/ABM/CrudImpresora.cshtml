@model Model.impresora

@{
    ViewBag.Title = (Model.id > 0 ? Model.marca_modelo : "Nuevo Registro");
}

<h4 class="page-title">Nueva Impresora!</h4>
<ol class="breadcrumb">
    <li><a href="~/Inicio/Index">Inicio</a></li>
    <li class="active">@("Nueva Impresora") </li>
</ol>

@using (Html.BeginForm("GuardarImpresora", "ABM", FormMethod.Post))
{
    @*@Html.HiddenFor(x => x.id)*@
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card-box">
                <h4 class="m-t-0 m-b-20 header-title"><b>NUEVA IMPRESORA</b></h4>

                <div class="row">
                    <div class="col-md-12">
                        <h5><b>Agregue una impresora al sistema</b></h5>
                        <p class="text-muted m-b-30 font-13">
                            Llene los campos a continuacion para agregar la impresora nueva.
                        </p>
                        <div class="form-group">
                            @Html.Label("Ingrese marca y modelo de la impresora")
                            @Html.TextBoxFor(x => x.marca_modelo, new { @class = "form-control", @style = "width:200px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.marca_modelo, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                @Html.Label("Tipo de Conexion")
                                <select name="Tipo" class="form-control" style="width:200px;">
                                    <option @(Model.tipo == "LOCAL" ? "selected" : "") value="LOCAL">LOCAL</option>
                                    <option @(Model.tipo == "RED" ? "selected" : "") value="RED">RED</option>
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="mostrarmodal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>Atención</h3>
                </div>
                <div class="modal-body">
                    <h4>Desea agregar la impresora?</h4>
                    Al aceptar se agregara a la lista de impresoras. Podra eliminar la impresora desde dicha lista.
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn-custom btn-default">Aceptar</button>
                    @*<a href="#" data-dismiss="modal" class="btn btn-default">Aceptar</a>*@
                </div>
            </div>
        </div>
    </div>
}

<div class="text-center">
    <button class="btn-custom btn-inverse" data-toggle="modal" data-target="#mostrarmodal">Agregar</button>
</div>



