@model Model.ubicacionPC

@{
    ViewBag.Title = "Editar ubicacion de PC";
}

<ol class="breadcrumb">
    <li><a href="~/Inicio/index">Inicio</a></li>
    <li class="active">@(Model.id_ubicacion > 0 ? Model.nombre : "Editar ubicacion PC") </li>
</ol>

@using (Html.BeginForm("Guardarubipc", "ABM", FormMethod.Post))
{
    @Html.HiddenFor(x => x.id_ubicacion)
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card-box">
                <h4 class="m-t-0 m-b-20 header-title"><b>EDITAR UBICACION DE PC</b></h4>

                <div class="row">
                    <div class="col-md-12">
                        <h5><b>Edita las propiedades de la ubicacion</b></h5>
                        <p class="text-muted m-b-30 font-13">
                            Edite la ubicacion.
                        </p>
                        <div class="form-group">
                            @Html.Label("Ingrese ubicacion de PC")
                            @Html.TextBoxFor(x => x.nombre, new { @class = "form-control", @style = "width:200px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.nombre, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Ingrese descripcion de Ubicacion")
                            @Html.TextBoxFor(x => x.descripcion, new { @class = "form-control", @style = "width:300px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.descripcion, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Ingrese responsable de Ubicacion")
                            @Html.TextBoxFor(x => x.responsable, new { @class = "form-control", @style = "width:300px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.responsable, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn-custom btn-inverse">Guardar</button>
    </div>

}
