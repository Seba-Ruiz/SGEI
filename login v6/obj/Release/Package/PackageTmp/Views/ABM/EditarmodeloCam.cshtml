@model Model.marca_modelo_camara

@{
    ViewBag.Title = "Editar Modelo Camara";
}

<ol class="breadcrumb">
    <li><a href="~/Inicio/index">Inicio</a></li>
    <li class="active">@(Model.id_mmarca > 0 ? Model.marca_modelo : "Editar Modelo") </li>
</ol>

@using (Html.BeginForm("Guardarmmarcacam", "ABM", FormMethod.Post))
{
    @Html.HiddenFor(x => x.id_mmarca)
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card-box">
                <h4 class="m-t-0 m-b-20 header-title"><b>EDITAR MODELO DE CAMARA</b></h4>

                <div class="row">
                    <div class="col-md-12">
                        <h5><b>Edita las propiedades del modelo </b></h5>
                        <p class="text-muted m-b-30 font-13">
                            Edite el modelo
                        </p>
                        <div class="form-group">
                            @Html.Label("Ingrese Marca y Modelo")
                            @Html.TextBoxFor(x => x.marca_modelo, new { @class = "form-control", @style = "width:200px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.marca_modelo, null, new { @class = "label label-danger" })
                        </div>
                       

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn-custom btn-inverse">Guardar</button>
    </div>

}
