@model Model.AspNetUsers
@{
    ViewBag.Title = "Detalle";
}

@Html.AntiForgeryToken()
@Html.ValidationSummary("", new { @class = "text-danger" })

<div class="container">

    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">

            <h4 class="page-title">Detalle del Usuario</h4>
            <ol class="breadcrumb">
                <li>
                    <a href="~/usuario/index">Usuario</a>
                </li>
                <li class="active">
                    Detalle
                </li>
            </ol>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="card-box">
                <h4 class="m-t-0 header-title"><b>Detalle del usuario</b></h4>
                <p class="text-muted m-b-30 font-13">
                    Esta pantalla muestra la informacion detallada del usuario Seleccionado
                </p>
                <div class="col-md-2"></div>
                <div class="row">
                    <div class="col-md-10">
                        <form class="form-horizontal" role="form">

                            <div class="form-group">
                                <label class="col-md-2 control-label">Email </label>
                                <div class="col-md-10">

                                    <label class="form-control" readonly="">@Model.Email</label>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-md-2 control-label">Telefono</label>
                                <div class="col-md-10">
                                    @if (Model.PhoneNumber == null)
                                    {
                                        <label class="form-control" readonly="">---</label>
                                    }
                                    else
                                    {
                                        <label class="form-control" readonly="">@Model.PhoneNumber</label>
                                    }

                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-md-2 control-label">Tipo de Usuario</label>
                                <div class="col-md-10">

                                    <label class="form-control" readonly="">@ViewBag.tipoRol</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Ultimo Ingreso</label>
                                <div class="col-md-10">

                                    <label class="form-control" readonly="">@Model.ultimo_ingreso</label>
                                </div>
                            </div>



                            <div class="form-group">
                                <label class="col-md-2 control-label">Nombre</label>
                                <div class="col-md-10">
                                    @if (Model.nombre == null)
                                    {
                                        <label class="form-control" readonly="">---</label>
                                    }
                                    else
                                    {
                                        <label class="form-control" readonly="">@Model.nombre</label>
                                    }
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Apellido</label>
                                <div class="col-md-10">
                                    @if (Model.apellido == null)
                                    {
                                        <label class="form-control" readonly="">---</label>
                                    }
                                    else
                                    {
                                        <label class="form-control" readonly="">@Model.apellido</label>
                                    }
                                </div>
                            </div>
                        </form>
                        @using (Html.BeginForm("Editar", "Usuario", FormMethod.Post))
                        {
                            <div class="modal-footer">
                                <a class="btn btn-danger btn-custom btn-rounded waves-effect waves-light" title="Editar computadora" href="~/Usuario/Editar/@Model.Id"> Editar </a>
                                
                            </div>
                        }
                    </div>





                </div>

            </div>
        </div>

    </div>

</div>



