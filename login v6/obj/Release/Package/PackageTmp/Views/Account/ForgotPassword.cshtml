@model login_v6.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "¿Olvidó la contraseña?";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <link rel="shortcut icon" href="~/assets/images/favicon_1.ico">

    <title>SGEI - Reset de Contraseña</title>

    <link href="~/assets/login/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/login/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/login/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/login/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/login/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/login/css/responsive.css" rel="stylesheet" type="text/css" />

  
    <script src="~/assets/js/modernizr.min.js"></script>

</head>
<body class="full-screen bg-img-1">

    <div class="account-pages"></div>
    <div class="clearfix"></div>
    <div class="wrapper-page">
        <div class="card-box">
            <div class="panel-heading">
                <h3 class="text-center"> Has olvidado tu contraseña? </h3>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="alert alert-info alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                            ×
                        </button>
                        Ingrese su <b>Email</b> y verifique su correo!
                    </div>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group m-b-0">
                        <div class="input-group">
                            @*<input type="email" class="form-control" placeholder="Enter Email" required="">*@
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type="email" })
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-danger w-sm waves-effect waves-light">
                                    Aceptar
                                </button>
                            </span>
                        </div>
                    </div>

                }
            </div>
        </div>


    </div>

    <script>
			var resizefunc = [];
    </script>

    <!-- jQuery  -->
    <script src="~/assets/login/js/jquery.min.js"></script>
    <script src="~/assets/login/js/bootstrap.min.js"></script>
    <script src="~/assets/login/js/detect.js"></script>
    <script src="~/assets/login/js/fastclick.js"></script>
    <script src="~/assets/login/js/jquery.slimscroll.js"></script>
    <script src="~/assets/login/js/jquery.blockUI.js"></script>
    <script src="~/assets/login/js/waves.js"></script>
    <script src="~/assets/login/js/wow.min.js"></script>
    <script src="~/assets/login/js/jquery.nicescroll.js"></script>
    <script src="~/assets/login/js/jquery.scrollTo.min.js"></script>


    <script src="~/assets/login/js/jquery.core.js"></script>
    <script src="~/assets/login/js/jquery.app.js"></script>

</body>
</html>
























