
@{
    ViewBag.Title = "ConsultarFecha";
}

<h4 class="page-title">Consulta!</h4>
<ol class="breadcrumb">
    <li><a href="~/Inicio/Index">Inicio</a></li>
    <li class="active">@("Seleccion de Fecha") </li>
</ol>

@using (Html.BeginForm("ConsultarRangoTelIncidente", "Consulta", FormMethod.Post))
{

    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card-box">
                <h4 class="m-t-0 m-b-20 header-title"><b>CONSULTA ENTRE FECHAS</b></h4>

                <div class="row">
                    <div class="col-md-12">
                        <h5><b>Insumo por fecha</b></h5>
                        <p class="text-muted m-b-30 font-13">
                            Seleccione las fechas para la consulta de los incidentes en el rango de fechas que seleccionara.
                        </p>


                        <div class="form-group">
                            @Html.Label("Fecha Desde")
                            <input type="date" id="FechaDesde" name="FechaDesde" class="form-control" style="width:200px;" />
                        </div>

                        <div class="form-group">
                            @Html.Label("Fecha Hasta")
                            <input type="date" id="FechaHasta" name="FechaHasta" class="form-control" style="width:200px;" />
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-custom waves-effect waves-light">Consultar</button>
    </div>

}
