
@{
    ViewBag.Title = "Consulta de Telefonos";
}

<h4 class="page-title">Consultas!</h4>
<ol class="breadcrumb">
    <li><a href="~/Inicio/Index">Inicio</a></li>
    <li class="active">@("Consulta de Telefonos") </li>
</ol>

<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-lg-8">
        <ul class="nav nav-tabs tabs">
            <li class="active tab">
                <a href="#home-2" data-toggle="tab" aria-expanded="false">
                    <span class="visible-xs"><i class="fa fa-home"></i></span>
                    <span class="hidden-xs">Telefonos Disponibles</span>
                </a>
            </li>
            <li class="tab">
                <a href="#profile-2" data-toggle="tab" aria-expanded="false">
                    <span class="visible-xs"><i class="fa fa-user"></i></span>
                    <span class="hidden-xs">Incidentes de Telefonos</span>
                </a>
            </li>


        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="home-2">


                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel panel-primary panel-border">
                            <div class="panel-heading">
                                <h4 class="panel-title">TELEFONOS DISPONIBLES</h4>
                            </div>
                            <div class="panel-body">
                                <p class="text-muted m-b-30 font-13">
                                    A continuación se muestra la cantidad de telefonos que se dispone.
                                </p>
                                <div class="card-box table-responsive">
                                    <table class="table table-striped m-0">
                                        <thead>
                                            <tr>
                                                <th style="width:100px;">Descripción</th>
                                                <th style="width:100px;">Cantidad Disponible</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var a in ViewBag.telefonos)

                                            {
                                                <tr>
                                                    <th>@a.descripcion</th>
                                                    <th>@a.cantidad</th>

                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="profile-2">

                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel panel-warning panel-border">
                            <div class="panel-heading">
                                <h4 class="panel-title">CONSULTA DE INCIDENTES</h4>
                            </div>
                            <div class="panel-body">


                                <div class="row">
                                    <div class="col-sm-12">
                                        @*<h5><b>INSUMOS POR FECHA</b></h5>*@
                                        <p class="text-muted m-b-30 font-13">
                                            Para comenzar seleccione en el combo la ubicación del telefono, el sistema mostrará los telefonos en esa ubicación.
                                        </p>
                                        @using (Html.BeginForm("BuscarTel", "Consulta", FormMethod.Post, new { id = "frm-incidente" }))
                                        {
                                            <div class="form-group text-center">
                                                @Html.Label("Nombre de Ubicacion:")
                                                @Html.DropDownList("ubicaciontel", new SelectList(ViewBag.ubicaciontel, "id_ubicacion_tel", "nombre_ubi"), new { @class = "btn dropdown-toggle btn-white", @style = "width:200px;" })
                                            </div>
                                            <div class="form-group">
                                                <div class="text-center">
                                                    <button type="submit" class="btn-custom btn-inverse">Buscar</button>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>








