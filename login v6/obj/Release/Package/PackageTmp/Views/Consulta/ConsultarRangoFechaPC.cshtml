
@{
    ViewBag.Title = "ConsultarFecha";
}

<h4 class="page-title">Consulta!</h4>
<ol class="breadcrumb">
    <li><a href="~/Inicio/Index">Inicio</a></li>
    <li class="active">@("Seleccion de Fecha") </li>
</ol>

@using (Html.BeginForm("ConsultarRangoPC", "Consulta", FormMethod.Post))
{



    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="panel panel-purple panel-border">
                <div class="panel-heading">
                    <h4 class="panel-title">CONSULTA DE INSUMO POR FECHA</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            @*<h5><b>Insumo por fecha</b></h5>*@
                            <p class="text-muted m-b-30 font-13">
                                Seleccione el rango de fechas para la consulta de los insumos colocados en el rango seleccionado.
                            </p>


                            <div class="form-group col-md-offset-3">
                                @Html.Label("Fecha Desde", new { @class = "text-primary" })
                                <input type="date" id="FechaDesde" name="FechaDesde" class="form-control " style="width:200px;" />
                            </div>

                            <div class="form-group col-md-offset-3">
                                @Html.Label("Fecha Hasta", new { @class = "text-primary" })
                                <input type="date" id="FechaHasta" name="FechaHasta" class="form-control" style="width:200px;" />
                            </div>

                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-custom waves-effect waves-light">Consultar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>



}
