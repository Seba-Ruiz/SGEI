
@{
    ViewBag.Title = "Inicio";
}

<div class="row">
    <div class="col-sm-12">
        <div class="btn-group pull-right m-t-15">
            <button type="button" class="btn btn-primary dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="false">Preventivo <span class="m-l-5"><i class="fa fa-ellipsis-v"></i></span></button>
            <ul class="dropdown-menu" role="menu">
                <li><a href="~/Computadora/Preventivo">Computadoras</a></li>
                <li><a href="~/Impresora/Preventivo">Impresoras</a></li>
