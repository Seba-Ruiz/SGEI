@model IEnumerable<Negocio.DTO.DTO_mantenimiento>
@{
    ViewBag.Title = "Inicio";
}

<div class="row">
    <div class="col-sm-12">


        <h4 class="page-title">PANEL</h4>
        <p class="text-muted page-title-alt">Bienvenido al panel de SGEI</p>
    </div>
</div>

<div class="row">

    <div class="col-sm-6 col-md-6 col-lg-3">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-inverse pull-left">
                <i class="md md-print text-danger"></i>
            </div>
            <div class="text-right">
                <h3 class="text-danger"><b data-plugin="counterup">@ViewBag.impresoras</b></h3>
                <p class="text-muted">Cantidad</p>
                <a class="btn btn-primary btn-custom waves-effect waves-light" href="~/Home/Index">Impresoras</a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-sm-6 col-md-6 col-lg-3">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-inverse pull-left">
                <i class="md md-computer text-inverse"></i>
            </div>
            <div class="text-right">
                <h3 class="text-dark"><b data-plugin="counterup">@ViewBag.computadoras</b></h3>
                <p class="text-muted">Cantidad</p>
                <a class="btn btn-primary btn-custom waves-effect waves-light" href="~/Computadora/Index">Computadoras</a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-sm-6 col-md-6 col-lg-3">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-inverse pull-left">
                <i class="md md-phone-in-talk text-success"></i>
            </div>
            <div class="text-right">
                <h3 class="text-success"><b data-plugin="counterup">@ViewBag.telefonos</b></h3>
                <p class="text-muted">Cantidad</p>
                <a class="btn btn-primary btn-custom waves-effect waves-light" href="~/Telefonos/Index">Teléfonos</a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-sm-6 col-md-6 col-lg-3">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-inverse pull-left">
                <i class="fa fa-camera text-danger"></i>
            </div>
            <div class="text-right">
                <h3 class="text-warning"><b data-plugin="counterup">@ViewBag.camaras</b></h3>
                <p class="text-muted">Cantidad</p>
                <a class="btn btn-primary btn-custom waves-effect waves-light" href="~/Camara/Index">Cámaras</a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-md-6 col-sm-6 col-lg-3"></div>

    <div class="col-sm-6 col-md-6 col-lg-3">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-inverse pull-left">
                <i class="typcn typcn-flow-switch text-inverse"></i>
            </div>
            <div class="text-right">
                <h3 class="text-primary"><b data-plugin="counterup">@ViewBag.sw</b></h3>
                <p class="text-muted">Cantidad</p>
                <a class="btn btn-primary btn-custom waves-effect waves-light" href="~/Swichs/Index">Switchs</a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-sm-6 col-md-6 col-lg-3">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-inverse pull-left">
                <i class="fa fa-files-o text-success"></i>
            </div>
            <div class="text-right">
                <h3 class="text-primary"><b data-plugin="counterup">@ViewBag.es</b></h3>
                <p class="text-muted">Cantidad</p>
                <a class="btn btn-primary btn-custom waves-effect waves-light" href="~/Escaner/Index">Escaners</a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-lg-10 col-lg-offset-1">
        <div class="card-box">
            <h4 class="text-dark header-title m-t-0">Mantenimiento Sugerido</h4>
            <p class="text-muted m-b-30 font-13">
                Las siguiente lista muestra las impresoras y computadoras que necesitan mantenimiento.
            </p>

            <div class="table-responsive">
                <table class="table table-actions-bar m-b-0">
                    <thead>
                        <tr>

                            <th>Equipo</th>
                            <th>Último Mantenimietno</th>
                            <th>Ubicación</th>
                            <th>Descripción</th>
                            <th style="min-width: 80px;">Accion</th>
                        </tr>
                    </thead>
                    
                    
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.tipo == "PC")
                            {
                                <tr>
                                    <td><img src="~/assets/images/products/macbook.jpg" class="thumb-sm pull-left m-r-10" alt=""> @item.nombre </td>
                                    <td><span class="text-danger">@item.ultimo_mantenimiento</span></td>
                                    <td><span class="text-success">@item.ubicacion</span></td>
                                    <td><span class="text-success">@item.descripcion</span></td>
                                    <td>
                                        <a href="#" title="Realizar Mantenimiento" class="table-action-btn"><i class="md md-done"></i></a>
                                        <a href="#" title="Posponer Mantenimiento" class="table-action-btn"><i class="md md-exit-to-app"></i></a>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td><img src="~/assets/images/products/hp.jpg" class="thumb-sm pull-left m-r-10" alt=""> @item.nombre </td>
                                    <td><span class="text-danger">@item.ultimo_mantenimiento</span></td>
                                    <td><span class="text-success">@item.ubicacion</span></td>
                                    <td><span class="text-success">@item.descripcion</span></td>
                                    <td>
                                        <a href="#" title="Realizar Mantenimiento" class="table-action-btn"><i class="md md-done"></i></a>
                                        <a href="#" title="Posponer Mantenimiento" class="table-action-btn"><i class="md md-exit-to-app"></i></a>
                                    </td>
                                </tr>
                            }
                        }




                    </tbody>
                </table>
            </div>

        </div>
    </div>


</div>
