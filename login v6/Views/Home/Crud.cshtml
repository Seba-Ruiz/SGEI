@model Model.impresora
@{
    ViewBag.Title = (Model.id > 0 ? Model.marca_modelo : "Nuevo Registro");
}

<h4 class="page-title">Nueva Impresora!</h4>
<ol class="breadcrumb">
    <li><a href="~/Inicio/Index">Inicio</a></li>
    <li class="active">@("Modelo de Impresora") </li>
</ol>

@using (Html.BeginForm("Guardar", "Home", FormMethod.Post))
{
    @Html.HiddenFor(x => x.id)
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="card-box">
            <h4 class="m-t-0 m-b-20 header-title"><b>MODELO DE IMPRESORA</b></h4>

            <div class="row">
                <div class="col-md-12">
                    <h5><b>Seleccion de Modelo</b></h5>
                    <p class="text-muted m-b-30 font-13">
                        Seleccione el modelo de la impresora que se colocara. Si no esta en la lista vaya a Gestion > Impresora > Agregar para dar de alta una nueva impresora.
                    </p>
                    <div class="form-group">
                        @Html.Label("Seleccione la Impresora")
                        @Html.DropDownList("impresora", new SelectList(ViewBag.impresoras, "id", "marca_modelo"), new { @class = "form-control", @style = "width:200px;" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

            <div class="text-center">
                <button type="submit" class="btn-custom btn-inverse">Siguiente</button>
            </div>

            }



