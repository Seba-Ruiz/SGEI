@model Negocio.DTO.DTO_PC
@{
    ViewBag.Title = "Alta PC";
}

<h2>Alta de Coputadora</h2>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card-box">
            <h4 class="m-t-0 header-title"><b>ALTA DE COMPUTADORA</b></h4>
            <p class="text-muted m-b-30 font-13">
                Use este wizard para dar de alta una computadora, recuerde que una vez dada de alta podrá consultar el detalle de dicha computadora a travez de la busqueda de la misma como asi tambien editarla.
            </p>
            @using (Html.BeginForm("GuardarCompu", "Home", FormMethod.Post, new { id = "basic-form" }))
            {

                @*<form id="basic-form" action="#">*@
                <div>
                    <h3>Computadora</h3>

                    <section>
                        <div class="form-group clearfix">
                            @Html.Label("Ingrese nombre de la PC")
                            @Html.TextBoxFor(x => x.nombrepc, new { @class = "form-control", @style = "width:250px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.nombrepc, null, new { @class = "label label-danger" })

                        </div>
                        <div class="form-group clearfix">
                            @Html.Label("Ingrese numero de IP")
                            @Html.TextBoxFor(x => x.ip, new { @class = "form-control", @style = "width:250px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.ip, null, new { @class = "label label-danger" })

                        </div>

                        <div class="form-group clearfix">
                            @Html.Label("Ingrese descripcion")
                            @Html.TextBoxFor(x => x.descripcion, new { @class = "form-control", @style = "width:250px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.descripcion, null, new { @class = "label label-danger" })
                        </div>

                        <div class="form-group clearfix">
                            @Html.Label("Seleccione el tipo de Computadora")
                            @Html.DropDownList("tipo", new SelectList(ViewBag.tipo, "id_tipo", "nombre_tipo"), new { @class = "form-control", @style = "width:250px;" })
                        </div>

                    </section>

                    <h3>Detalle</h3>
                    <section>
                        <div class="form-group clearfix">

                            <div class="form-group clearfix">
                                @Html.Label("Ingrese responsable de la Computadora")
                                @Html.TextBoxFor(x => x.responsable, new { @class = "form-control", @style = "width:250px;", @required = "required" })
                                @Html.ValidationMessageFor(x => x.responsable, null, new { @class = "label label-danger" })

                            </div>
                        </div>
                        <div class="form-group clearfix">
                            @Html.Label("Observacion de la PC")
                            @Html.TextBoxFor(x => x.observacion, new { @class = "form-control", @style = "width:250px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.observacion, null, new { @class = "label label-danger" })

                        </div>

                        <div class="form-group clearfix">
                            <div class="form-group clearfix">
                                @Html.Label("Seleccione la cantidad de RAM")
                                @Html.DropDownList("ram", new SelectList(ViewBag.ram, "id_ram", "descripcion"), new { @class = "form-control", @style = "width:250px;" })
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <div class="form-group clearfix">
                                @Html.Label("Seleccione la cantidad de Disco")
                                @Html.DropDownList("disco", new SelectList(ViewBag.disco, "id_disco", "descripcion"), new { @class = "form-control", @style = "width:250px;" })
                            </div>
                        </div>




                    </section>
                    <h3>SO y HW</h3>
                    <section>
                        <div class="form-group clearfix">
                            <div class="form-group clearfix">
                                @Html.Label("Seleccione el Sistema Operativo")
                                @Html.DropDownList("so", new SelectList(ViewBag.so, "id_so", "descripcion"), new { @class = "form-control", @style = "width:250px;" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <div class="form-group clearfix">
                                @Html.Label("Seleccione marca y modelo Placa Madre")
                                @Html.DropDownList("moth", new SelectList(ViewBag.pm, "id_mother", "descripcion"), new { @class = "form-control", @style = "width:250px;" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <div class="form-group clearfix">
                                @Html.Label("Seleccione Ubicacion")
                                @Html.DropDownList("ubicacion", new SelectList(ViewBag.ubi, "id_ubicacion", "nombre"), new { @class = "form-control", @style = "width:250px;" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <div class="form-group clearfix">
                                @Html.Label("Seleccione Procesador")
                                @Html.DropDownList("proce", new SelectList(ViewBag.proce, "id_procesador", "descripcion"), new { @class = "form-control", @style = "width:250px;" })
                            </div>
                        </div>
                    </section>
                    <h3>Finalizar</h3>
                    <section>
                        <div class="form-group clearfix">
                            <div class="col-lg-12">
                                @*<div class="checkbox checkbox-primary">*@
                                <label for="test">
                                    Al hacer click en "Finalizar" aceptará guardar la informacion antes descripta. Podra modificar los detalles de la computadora seleccionada en cualquier momento que lo desee.
                                    <br />
                                    Por favor active la casilla:
                                </label>
                                @Html.CheckBox("test", new { @class = "form-control" })
                                @*<input id="checkbox-h" name="checkbox" type="checkbox">*@

                                @*</div>*@
                            </div>
                        </div>
                    </section>
                </div>

            }
            @*</form>*@

        </div>
    </div>
    <div class="col-md-2"></div>
</div>
