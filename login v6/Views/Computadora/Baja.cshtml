@model Model.bajaPC
@{
    ViewBag.Title = "Baja";
    Model.detallepc_id = ViewBag.detalle_id;
}


<ol class="breadcrumb">
    <li><a href="~/Inicio/Index">Inicio</a></li>
    <li class="active">@("Baja de Computadora") </li>
</ol>

@using (Html.BeginForm("BajaAceptada", "Computadora", FormMethod.Post))
{
    @Html.HiddenFor(x => x.detallepc_id)
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card-box">
                <h4 class="m-t-0 m-b-20 header-title"><b>BAJA</b></h4>
                <div class="row">
                    <div class="col-md-12">
                        <h5><b>Dar de baja a impresora del sistema</b></h5>
                        <p class="text-muted m-b-30 font-13">
                            Rellene los campos que siguen para especificar el motivo de la baja
                        </p>
                        <div class="form-group">
                            @Html.Label("Seleccione la ultima ubicacion de la computadora")
                            @Html.DropDownListFor(x =>x.ultima_ubicacion, new SelectList(ViewBag.ubicacion, "nombre", "nombre"), new { @class = "form-control", @style = "width:500px;" })
                        </div>

                        <div class="form-group">
                            @Html.Label("Seleccione el motivo de baja")
                            @Html.DropDownListFor(x=>x.motivobaja_id, new SelectList(ViewBag.motivobaja, "id_motivobaja", "descripcion"), new { @class = "form-control", @style = "width:500px;" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn-custom btn-inverse">Dar de Baja</button>
    </div>

}

