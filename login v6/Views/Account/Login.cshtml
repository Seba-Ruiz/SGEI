@using login_v6.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="SGEI">
    <meta name="author" content="Coderthemes">

    <link rel="shortcut icon" href="~/assets/images/favicon_1.ico">

    <title>SGEI - Login</title>

    <link href="~/assets/login/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/login/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/login/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/login/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/login/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/login/css/responsive.css" rel="stylesheet" type="text/css" />

</head>
<body class="full-screen bg-img-1" >

    <div class="bg-overlay"></div>
    <div class="clearfix"></div>

    <section >
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="wrapper-page">
                @Html.AntiForgeryToken()
                <div class=" card-box">
                    <div class="panel-heading">
                        <h3 class="text-center"> Inicia en  <strong class="text-custom">SGEI</strong> </h3>
                    </div>
                    <div class="panel-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                        <div class="form-group ">
                            <div class="col-xs-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <div class="col-xs-12">
                                <div class="checkbox checkbox-primary">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>

                            </div>
                        </div>

                        <div class="form-group text-center m-t-40">
                            <div class="col-xs-12">
                                <button class="btn btn-danger btn-block text-uppercase waves-effect waves-light" type="submit">Iniciar</button>
                            </div>
                        </div>

                        <div class="form-group m-t-30 m-b-0">
                            <div class="col-sm-12">

                                @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")


                            </div>
                        </div>


                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-center">

                        <p>
                            @Html.ActionLink("Registrar como nuevo usuario", "Register")
                        </p>


                    </div>
                </div>

            </div>
        }
    </section>

   

