
@{
    ViewBag.Title = "Index";
}

<h4 class="page-title">Consultas!</h4>
<ol class="breadcrumb">
    <li><a href="~/Inicio/Index">Inicio</a></li>
    <li class="active">@("Consulta de Incidentes de escaners") </li>
</ol>

<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-lg-8">
        <ul class="nav nav-tabs tabs">

            <li class="tab">
                <a href="#messages-2" data-toggle="tab" aria-expanded="true">
                    <span class="visible-xs"><i class="fa fa-envelope-o"></i></span>
                    <span class="hidden-xs">Incidendes de Escaners</span>
                </a>
            </li>

        </ul>
        <div class="tab-content">

            <div class="tab-pane" id="messages-2">
                @using (Html.BeginForm("BuscarIncidenteES", "Consulta", FormMethod.Post))

                {
                    <div class="row">
                        <div class="col-sm-3"></div>
                        <div class="col-sm-12">
                            <div class="card-box">
                                <h4 class="m-t-0 m-b-20 header-title"><b>CONSULTA DE INCIDENTE</b></h4>

                                <div class="row">
                                    <div class="col-md-12">
                                        <h5><b>Incidentes de Escaners</b></h5>
                                        <p class="text-muted m-b-30 font-13">
                                            Seleccione la ubicacion del escaner que desea consultar sus incidentes. El sistema mostrara los escaners de esa ubicacion.
                                        </p>
                                        <div class="form-group">
                                            @Html.Label("Nombre de Ubicacion")
                                            @Html.DropDownList("ubicacion", new SelectList(ViewBag.ubicaciones, "id_ubicacion_escaner", "nombre"), new { @class = "form-control", @style = "width:300px;" })
                                        </div>


                                        <div class="text-center">
                                            <button type="submit" class="btn-custom btn-inverse">Buscar</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>