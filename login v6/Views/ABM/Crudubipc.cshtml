@model Model.ubicacionPC

@{
    ViewBag.Title = "Ubicacion de PCs";
}

<h4 class="page-title">Nueva Ubicacion de PCs!</h4>
<ol class="breadcrumb">
    <li><a href="~/Inicio/Index">Inicio</a></li>
    <li class="active">@("Ubicacion PC") </li>
</ol>

@using (Html.BeginForm("Guardarubipc", "ABM", FormMethod.Post))
{
    @*@Html.HiddenFor(x => x.id)*@
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card-box">
                <h4 class="m-t-0 m-b-20 header-title"><b>NUEVA UBICACION DE PC</b></h4>

                <div class="row">
                    <div class="col-md-12">
                        <h5><b>Agregue una nueva Ubicacion de PC</b></h5>
                        <p class="text-muted m-b-30 font-13">
                            Llene los campos a continuacion para agregar una nueva Ubicacion de PC.
                        </p>
                        <div class="form-group">
                            @Html.Label("Ingrese nombre de Ubicacion")
                            @Html.TextBoxFor(x => x.nombre, new { @class = "form-control", @style = "width:300px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.nombre, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Ingrese descripcion de Ubicacion")
                            @Html.TextBoxFor(x => x.descripcion, new { @class = "form-control", @style = "width:300px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.descripcion, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Ingrese responsable de Ubicacion")
                            @Html.TextBoxFor(x => x.responsable, new { @class = "form-control", @style = "width:300px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.responsable, null, new { @class = "label label-danger" })
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="mostrarmodal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>Atención</h3>
                </div>
                <div class="modal-body">
                    <h4>Desea agregar la nueva Ubicacion de PC?</h4>
                    Al aceptar se agregara a la lista de Ubicaciones de PCs. Podra eliminar la ubicacion de dicha lista.
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn-custom btn-default">Aceptar</button>
                    @*<a href="#" data-dismiss="modal" class="btn btn-default">Aceptar</a>*@
                </div>
            </div>
        </div>
    </div>
}

<div class="text-center">
    <button class="btn-custom btn-inverse" data-toggle="modal" data-target="#mostrarmodal">Agregar</button>
</div>



