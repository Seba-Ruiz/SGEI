@model Model.discoPC

@{
    ViewBag.Title = "Editar Disco";
}

<ol class="breadcrumb">
    <li><a href="~/Inicio/index">Inicio</a></li>
    <li class="active">@(Model.id_disco > 0 ? Model.descripcion : "Editar Tamaño de Disco") </li>
</ol>

@using (Html.BeginForm("GuardarDisco", "ABM", FormMethod.Post))
{
    @Html.HiddenFor(x => x.id_disco)
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card-box">
                <h4 class="m-t-0 m-b-20 header-title"><b>EDITAR TAMAÑO DE DISCO</b></h4>

                <div class="row">
                    <div class="col-md-12">
                        <h5><b>Edita las propiedades del tamaño de Disco</b></h5>
                        <p class="text-muted m-b-30 font-13">
                            Edite el tamaño del disco.
                        </p>
                        <div class="form-group">
                            @Html.Label("Ingrese Tamaño")
                            @Html.TextBoxFor(x => x.descripcion, new { @class = "form-control", @style = "width:200px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.descripcion, null, new { @class = "label label-danger" })
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn-custom btn-inverse">Guardar</button>
    </div>

}
