@model Model.Proveedor
@{
    ViewBag.Title = "Editar Proveedor";
}
<ol class="breadcrumb">
    <li><a href="~/Inicio/index">Inicio</a></li>
    <li class="active">@(Model.id > 0 ? Model.nombre : "Editar Proveedor") </li>
</ol>
@using (Html.BeginForm("GuardarProveedor", "ABM", FormMethod.Post))
{
    @Html.HiddenFor(x => x.id)
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card-box">
                <h4 class="m-t-0 m-b-20 header-title"><b>EDITAR PROVEEDOR</b></h4>
                <div class="row">
                    <div class="col-md-12">
                        <h5><b>Edita las propiedades del proveedor </b></h5>
                        <p class="text-muted m-b-30 font-13">
                            Edite el proveedor.
                        </p>
                        <div class="form-group">
                            @Html.Label("Ingrese Nombre")
                            @Html.TextBoxFor(x => x.nombre, new { @class = "form-control", @style = "width:200px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.nombre, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Ingrese Telefono")
                            @Html.TextBoxFor(x => x.telefono, new { @class = "form-control", @style = "width:200px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.telefono, null, new { @class = "label label-danger" })
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn-custom btn-inverse">Guardar</button>
    </div>

}
