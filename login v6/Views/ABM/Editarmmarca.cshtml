@model Model.marca_modelo_cel

@{
    ViewBag.Title = "Editar Modelo";
}

<ol class="breadcrumb">
    <li><a href="~/Inicio/index">Inicio</a></li>
    <li class="active">@(Model.id_mm > 0 ? Model.descripcion : "Editar Modelo") </li>
</ol>

@using (Html.BeginForm("Guardarmmarca", "ABM", FormMethod.Post))
{
    @Html.HiddenFor(x => x.id_mm)
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card-box">
                <h4 class="m-t-0 m-b-20 header-title"><b>EDITAR MODELO DE TELEFONO</b></h4>

                <div class="row">
                    <div class="col-md-12">
                        <h5><b>Edita las propiedades del modelo de telefono </b></h5>
                        <p class="text-muted m-b-30 font-13">
                            Edite el tipo.
                        </p>
                        <div class="form-group">
                            @Html.Label("Ingrese Modelo Telefono")
                            @Html.TextBoxFor(x => x.descripcion, new { @class = "form-control", @style = "width:200px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.descripcion, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Ingrese Cantidad")
                            @Html.TextBoxFor(x => x.cantidad, new { @class = "form-control", @style = "width:200px;", @required = "required" })
                            @Html.ValidationMessageFor(x => x.cantidad, null, new { @class = "label label-danger" })
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn-custom btn-inverse">Guardar</button>
    </div>

}
