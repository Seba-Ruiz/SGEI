@model List<Model.insumo>
@{
    /**/

    ViewBag.Title = "Insumos";
}
<h4 class="page-title">Insumos!</h4>
<ol class="breadcrumb">
    <li><a href="~/Inicio/Index">Inicio</a></li>
    <li class="active">@("Detalle de los insumos") </li>
</ol>

@using (Html.BeginForm("Crud", "ABM", FormMethod.Post, new { id = "frm-insumo" }))
{

    <div class="vakata-context-left">
        <button type="submit" class="btn btn-inverse waves-effect waves-light">
            <span class="btn btn-label">
                <i class="md md-queue"></i>
            </span>
            Agregar
        </button>
    </div>

}
<div class="col-md-2"></div>
<div class="col-md-8">

    <div class="card-box table-responsive">
        <table class="table table-striped m-0">
            <thead>
                <tr>
                    <th style="width:50px;">Detalle del nombre de Insumo</th>
                    <th style="width:50px;">Cantidad</th>
                    <th style="width:10px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <th>@a.nombre</th>
                        <th>@a.cantidad</th>
                        <th>
                            <a class="glyphicon glyphicon-edit" title="Editar" href="~/ABM/Editar/@a.id"></a>

                            <a onclick="return confirm('¿Desea eliminar el Insumo?');" class="md md-clear" title="Eliminar" href="~/ABM/EliminarInsumo/@a.id"></a>
                        </th>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<div class="col-md-2"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}